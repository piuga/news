<?xml version="1.0" encoding="UTF-8"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-right"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="news_default"/>
    <body>
        <referenceContainer name="content">
            <block name="piuga.news.category" template="Piuga_News::news/category.phtml">
                <arguments>
                    <argument name="view_model" xsi:type="object">Piuga\News\ViewModel\CategoryView</argument>
                </arguments>
            </block>
            <block class="Piuga\News\Block\ItemsList" name="piuga.news.list" template="Piuga_News::news/list.phtml"/>
        </referenceContainer>
    </body>
</page>
